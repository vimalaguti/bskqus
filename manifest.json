{
  "manifest_version": 2,
  "name": "Bsky Link Previewer",
  "version": "1.0",
  "description": "Embed previews for bsky.app links in Disqus comments.",
  "browser_action": {
    "default_title": "Bsky Link Previewer",
    "default_popup": "popup.html",
    "default_icon": "icons/icon48.png"
  },
  "applications": {
    "gecko": {
      "id": "bskqus@example.com"
    }
  },
  "permissions": [
    "activeTab",
    "storage",
    "<all_urls>",
    "webRequest"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "64": "icons/icon64.png",
    "128": "icons/icon128.png"
  }
}